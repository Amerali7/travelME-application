<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.abbas.travelMe.activities.preferencesActivity"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tick the boxes that best describe  the seleceted Location"
            android:textColor="@color/colorText"/>

        <CheckBox
            android:id="@+id/sporty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sporty"
            android:theme="@style/CheckBox"
            android:textColor="@color/colorText"/>

        <CheckBox
            android:id="@+id/nature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CheckBox"
            android:text="Nature Lover"
            android:textColor="@color/colorText"/>

        <CheckBox
            android:id="@+id/thrill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CheckBox"
            android:text="Thrill Seeker"
            android:textColor="@color/colorText"/>

        <CheckBox
            android:id="@+id/art"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CheckBox"
            android:text="Artistic"
            android:textColor="@color/colorText"/>

        <CheckBox
            android:id="@+id/social"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CheckBox"
            android:text="Social Butterfly"
            android:textColor="@color/colorText"/>

        <CheckBox
            android:id="@+id/romantic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CheckBox"
            android:text="Romantic"
            android:textColor="@color/colorText"/>

        <CheckBox
            android:id="@+id/introvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CheckBox"
            android:text="Introvert"
            android:textColor="@color/colorText"/>

        <CheckBox
            android:id="@+id/shopaholic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CheckBox"
            android:text="Shopaholic"
            android:textColor="@color/colorText"/>

        <CheckBox
            android:id="@+id/film"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CheckBox"
            android:text="Film Buff"
            android:textColor="@color/colorText"/>

        <CheckBox
            android:id="@+id/music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CheckBox"
            android:text="Music Lover"
            android:textColor="@color/colorText"/>

        <Button
            android:id="@+id/Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/toast_frame"
            app:backgroundTint="@color/colorTextHint"
            android:text="Submit"
            android:textColor="@color/colorText"
            tools:ignore="MissingPrefix" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
